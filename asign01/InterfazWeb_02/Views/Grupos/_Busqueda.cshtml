@model List<InterfazWeb_02.Models.Materia>
<div class="container">
    <div class="row">
        <div class="col-md-6 form-group" id="buscaGrupo">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-10">
                        <label>Materia</label>
                        <select class="form-control" id="cve_materia">
                            @foreach(var m in Model)
                            { 
                                <option value="@m.CVE">@m.Nombre</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label>Grupo</label>
                        <input type="number" class="form-control" name="noGrupo" value="1"/>
                    </div> 
                </div>
            </div>
        </div>
        <div id="dias_horas" class="col-md-4 text-center">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-6">
                        <label>De</label>&nbsp;<input type="number" name="ini" value="7"/>&nbsp;
                    </div>
                    <div class="col-md-6">
                        <label>A</label>&nbsp;<input type="number" name="fin" value="22"/>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div id="dias" class="container-fluid">
                            <div class="row">
                                <div class="col-md-2">
                                    <label>L</label><br />
                                    <input type="checkbox" name="dias" value="L" checked>
                                </div>
                                <div class="col-md-2">
                                    <label>M</label><br />
                                    <input type="checkbox" name="dias" value="M" checked>
                                </div>
                                <div class="col-md-2">
                                    <label>Mi</label><br />
                                    <input type="checkbox" name="dias" value="Mi" checked>
                                </div>
                                <div class="col-md-2">
                                    <label>J</label><br />
                                    <input type="checkbox" name="dias" value="J" checked>
                                </div>
                                <div class="col-md-2">
                                    <label>V</label><br />
                                    <input type="checkbox" name="dias" value="V" checked>
                                </div>
                                <div class="col-md-2">
                                    <label>S</label><br />
                                    <input type="checkbox" name="dias" value="S" checked>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <button class="ui-button" id="buscar_grupos">Buscar</button>
            <button class="ui-button">Exportar</button>
        </div>
    </div>
</div>
<script src="~/JS/Grupos/Busqueda.js"></script>
