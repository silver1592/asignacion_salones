@model InterfazWeb_02.Clases.ListaGrupos

<table>
    <thead>
        <tr>
            <td width="5%">CVE</td>
            <td width="5%">N°</td>
            <td>Materia</td>
            <td>Profesor</td>
            <td width="6%" colspan="2">Lunes</td>
            <td width="6%" colspan="2">Martes</td>
            <td width="6%" colspan="2">Miercoles</td>
            <td width="6%" colspan="2">Jueves</td>
            <td width="6%" colspan="2">Viernes</td>
            <td width="6%" colspan="2">Sabado</td>
            <td width="5%">Salon</td>
            <td width="4%" colspan="2">Operaciones</td>
        </tr>
    </thead>
    @foreach(var g in Model)
    {
        <tr>
            <td>
                @g.Cve_materia
            </td>
            <td>
                @g.num_Grupo
            </td>
            <td>
                @Model.buscaMateria(g.Cve_materia).Nombre
            </td>
            <td>
                @Model.buscaProfesor(g.RPE.ToString()).Nombre
            </td>
            <td colspan="12">
                <!--//TODO:Poner el horario del grupo-->
            </td>
            <td>
                <input type="text" value="@g.Salon" />
            </td>
            <td >
                <!--//TODO: Botones para actualizacion y deshacer cambios-->
                <button class="ui-button">G</button>
            </td>
            <td>
                <button class="ui-button">R</button>
            </td>
        </tr>
    }
</table>